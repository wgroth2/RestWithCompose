<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="API Configuration"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="API_KEY"
            app:title="API Key"
            app:summary="Enter your API key"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="Enter API Key"
            app:iconSpaceReserved="false" />

        <EditTextPreference
            app:key="BASE_URL"
            app:title="Base URL"
            app:summary="Enter the server base URL"
            app:useSimpleSummaryProvider="true"
            app:dialogTitle="Enter Base URL"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>